@model HAN.Demo.Models.FilesModel

@{
    ViewData["Title"] = "Files - " + Model.Title;
}

<h1>Files</h1>
<h2>@Model.Title</h2>

<div>
    <div class="row">
        <ol>
            @foreach (FileDetails f in Model.Files)
            {
            <li>
                <a href="@Url.Action("Download",new {file = f.Title})">
                    @f.Title
                </a><br />
                <span class="small">@f.UploadStarted - @f.UploadEnded ( @f.Elapsed )</span>
            </li>
            }
        </ol>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneratedIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneratedIn)
        </dd>
    </dl>
</div>